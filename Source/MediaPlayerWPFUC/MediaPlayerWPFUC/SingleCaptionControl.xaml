<UserControl
	x:Class="MediaPlayerWPFUC.SingleCaptionControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:MediaPlayerWPFUC"
	mc:Ignorable="d" 
	d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<!-- Row 0. Filler -->
			<RowDefinition Height="*" />
			<!-- Row 1. Content -->
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Name="bordMessage"
			Visibility="Visible"
			Background="#000000"
			BorderThickness="1"
			BorderBrush="#c0c0c0"
			CornerRadius="5"
			HorizontalAlignment="Center"
			Padding="6" Margin="0,0,0,16"
			Grid.Row="1"
		>
			<TextBlock Name="txtMessage"
				Foreground="White" Text="Ready..."
			/>
		</Border>
	</Grid>
</UserControl>
